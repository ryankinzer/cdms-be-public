<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
    <section name="nlog" requirePermission="false" type="NLog.Config.ConfigSectionHandler, NLog"/>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
  </configSections>
  <connectionStrings>
    <add name="ServicesContext" connectionString="Data Source=OIT-GIS-LT13;Initial Catalog=CDMS_PROD;Timeout=120;Persist Security Info=True;User ID=cdms_prod_user;Password=SECRETPW;MultipleActiveResultSets=True" providerName="System.Data.SqlClient"/>
    <add name="ADConnectionString" connectionString="LDAP://ORG-DC02.some.domain.com:389/DC=some,DC=domain,DC=com"/>
  </connectionStrings>
  <appSettings>
    <add key="ServerEnvironment" value="dev"/>
    <!-- or "prod"/"test" -->
    <add key="vs:EnableBrowserLink" value="false"/>
    <add key="webpages:Version" value="2.0.0.0"/>
    <add key="webpages:Enabled" value="false"/>
    <add key="PreserveLoginUrl" value="true"/>
    <add key="ClientValidationEnabled" value="true"/>
    <add key="UnobtrusiveJavaScriptEnabled" value="true"/>
    <add key="PasswordSalt" value="local_salt"/>
    <add key="MasqueradePassword" value="superman123"/>
    <add key="ExecutingEnvironment" value="services/"/>
    <add key="PathToStreamNetSyncScript" value="c:\ken\IIS-WEB\cdms-public\services\StreamNetSync.py"/>
    
    <!-- physical directory to services (where we will save uploaded files, logs, etc.) -->
    <add key="PathToServices" value="c:\ken\IIS-WEB\cdms-public\services"/>
    
    <!-- web location for link we create for uploaded files (can be web address or physical directory) -->
    <add key="PathToCdmsShare" value="C:\ken\IIS-WEB\cdms-public\services\uploads"/>
    
  </appSettings>
  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.6.1" />
      </system.Web>
  -->
  <system.web>
    <authorization>
      <deny users="?"/>
    </authorization>
    <compilation debug="true" targetFramework="4.6.2"/>
    <customErrors mode="Off"/>
    <!-- 30 mb file upload limit -->
    <!-- This is part 1.  in MB...)  See RequestLimits for part 2.-->
    <!--<httpRuntime maxRequestLength="30720" />-->
    <!--<httpRuntime maxRequestLength="51200" />-->
    <httpRuntime maxRequestLength="102400"/>
    <pages controlRenderingCompatibilityVersion="4.0">
      <namespaces>
        <add namespace="System.Web.Helpers"/>
        <add namespace="System.Web.Mvc"/>
        <add namespace="System.Web.Mvc.Ajax"/>
        <add namespace="System.Web.Mvc.Html"/>
        <add namespace="System.Web.Optimization"/>
        <add namespace="System.Web.Routing"/>
        <add namespace="System.Web.WebPages"/>
      </namespaces>
    </pages>
    <profile defaultProvider="DefaultProfileProvider">
      <providers>
        <add name="DefaultProfileProvider" type="System.Web.Providers.DefaultProfileProvider, System.Web.Providers, Version=1.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" connectionStringName="DefaultConnection" applicationName="/"/>
      </providers>
    </profile>
    <authentication mode="Forms">
      <!-- forms timeout="720" name=".ADAuthCookie" loginUrl="~/api/v1/Account/Login" / -->
      <forms timeout="720" name=".ADAuthCookie" loginUrl="~/api/v1/Account/Login"/>
      <!-- forms timeout="720" name=".ADAuthCookie" loginUrl="~/Account/Login" / -->
    </authentication>
    <membership defaultProvider="ADMembershipProvider">
      <providers>
        <add name="ADMembershipProvider" type="System.Web.Security.ActiveDirectoryMembershipProvider" connectionStringName="ADConnectionString" attributeMapUsername="sAMAccountName" connectionUsername="DOMAIN\serviceaccount" connectionPassword="ABC123"/>
      </providers>
    </membership>
    <sessionState mode="InProc" timeout="720">
      <providers>
        <add name="DefaultSessionProvider" type="System.Web.Providers.DefaultSessionStateProvider, System.Web.Providers, Version=1.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" connectionStringName="DefaultConnection"/>
      </providers>
    </sessionState>
    <httpModules/>
  </system.web>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <security>
      <requestFiltering>
        <!--<requestLimits maxAllowedContentLength="51200000" />-->
        <!-- Part 2 to limit upload file size, in bytes.  Part 3 in in IIS Manager.-->
        <requestLimits maxAllowedContentLength="102400000"/>
        <!-- Part 2 to limit upload file size, in bytes.  Part 3 in in IIS Manager.-->
      </requestFiltering>
    </security>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0"/>
      <remove name="OPTIONSVerbHandler"/>
      <remove name="TRACEVerbHandler"/>
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0"/>
    </handlers>
    <validation validateIntegratedModeConfiguration="false"/>
  </system.webServer>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.SqlConnectionFactory, EntityFramework"/>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer"/>
    </providers>
  </entityFramework>
  <!-- for configuring nlog see: https://github.com/NLog/NLog/wiki/Configuration-file#log-levels -->
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="flog" xsi:type="File" fileName="c:/ken/IIS-WEB/cdms-public/services/logs/cdms_log_dev.txt"/>
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="flog"/>
    </rules>
  </nlog>
